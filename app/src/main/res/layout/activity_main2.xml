<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Main2Activity">

	<EditText
			android:maxLength="2"
			android:inputType="number"
			app:layout_constraintRight_toLeftOf="@id/etRF1"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			android:id="@+id/etLF1"
			app:layout_constraintHorizontal_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>
	<EditText
			android:maxLength="2"
			android:inputType="number"
			app:layout_constraintRight_toLeftOf="@id/etRF2"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@id/etLF1"
			android:id="@+id/etLF2"
			app:layout_constraintHorizontal_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>
	<EditText
			android:maxLength="2"
			android:inputType="number"
			app:layout_constraintRight_toLeftOf="@id/etRB1"
			app:layout_constraintTop_toBottomOf="@id/etLF2"
			app:layout_constraintLeft_toLeftOf="parent"
			android:id="@+id/etLB1"
			app:layout_constraintHorizontal_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>
	<EditText
			android:maxLength="2"
			android:inputType="number"
			app:layout_constraintRight_toLeftOf="@id/etRB2"
			app:layout_constraintTop_toBottomOf="@id/etLB1"
			app:layout_constraintLeft_toLeftOf="parent"
			android:id="@+id/etLB2"
			app:layout_constraintHorizontal_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>
	<EditText
			android:maxLength="2"
			android:inputType="number"
			app:layout_constraintLeft_toRightOf="@id/etLF1"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:id="@+id/etRF1"
			app:layout_constraintHorizontal_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>
	<EditText
			android:maxLength="2"
			android:inputType="number"
			app:layout_constraintLeft_toRightOf="@id/etLF2"
			app:layout_constraintTop_toBottomOf="@id/etRF1"
			app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/etRF2"
			app:layout_constraintHorizontal_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>
	<EditText
			android:maxLength="2"
			android:inputType="number"
			app:layout_constraintLeft_toRightOf="@id/etLB1"
			app:layout_constraintTop_toBottomOf="@id/etRF2"
			app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/etRB1"
			app:layout_constraintHorizontal_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>
	<EditText
			android:maxLength="2"
			android:inputType="number"
			app:layout_constraintLeft_toRightOf="@id/etLB2"
			app:layout_constraintTop_toBottomOf="@id/etRB1"
			app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/etRB2"
			app:layout_constraintHorizontal_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>

	<Button
			android:textColor="@android:color/white"
			android:textSize="18dp"
			android:text="执行"
			android:id="@+id/btnCommit"
			android:background="@drawable/shape_button_bg"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@id/etLB2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>