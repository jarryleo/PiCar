<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

	<View
			android:background="@drawable/shape_status_red"
			android:id="@+id/status"
			android:layout_margin="16dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_width="20dp"
			android:layout_height="20dp"/>

	<SeekBar
			app:layout_constraintLeft_toRightOf="@id/status"
			app:layout_constraintBottom_toBottomOf="@id/status"
			app:layout_constraintTop_toTopOf="@id/status"
			android:id="@+id/sbSpeed"
			android:progress="50"
			app:layout_constraintRight_toRightOf="parent"
			android:max="100"
			android:layout_margin="16dp"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>

	<Button
			android:padding="16dp"
			android:textSize="15sp"
			android:textColor="@android:color/white"
			android:background="@drawable/shape_button_bg"
			android:id="@+id/btnLeft"
			android:text="左平移"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<Button
			android:padding="16dp"
			android:textSize="15sp"
			android:textColor="@android:color/white"
			android:background="@drawable/shape_button_bg"
			android:id="@+id/btnBackward"
			android:text="后退"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@id/btnLeft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<Button
			android:padding="16dp"
			android:textSize="15sp"
			android:textColor="@android:color/white"
			android:background="@drawable/shape_button_bg"
			android:id="@+id/btnRight"
			android:text="右平移"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@id/btnBackward"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<Button
			android:padding="16dp"
			android:textSize="15sp"
			android:textColor="@android:color/white"
			android:background="@drawable/shape_button_bg"
			android:id="@+id/btnTurnLeft"
			android:text="左转"
			app:layout_constraintBottom_toTopOf="@id/btnLeft"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<Button
			android:padding="16dp"
			android:textSize="15sp"
			android:textColor="@android:color/white"
			android:background="@drawable/shape_button_bg"
			android:id="@+id/btnForward"
			android:text="前进"
			app:layout_constraintBottom_toTopOf="@id/btnBackward"
			app:layout_constraintLeft_toRightOf="@id/btnTurnLeft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<Button
			android:padding="16dp"
			android:textSize="15sp"
			android:textColor="@android:color/white"
			android:background="@drawable/shape_button_bg"
			android:id="@+id/btnTurnRight"
			android:text="右转"
			app:layout_constraintBottom_toTopOf="@id/btnRight"
			app:layout_constraintLeft_toRightOf="@id/btnForward"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<Button
			android:padding="16dp"
			android:textSize="15sp"
			android:textColor="@android:color/white"
			android:background="@drawable/shape_button_bg"
			android:id="@+id/btnBrake"
			android:text="刹车"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@id/btnTurnRight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>